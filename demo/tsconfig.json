{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "removeComments": true,
    "pretty": false,
    "diagnostics": true,
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "*": ["./node_modules/*"]
    }
  },
  "exclude": ["node_modules", "platforms"]
}
